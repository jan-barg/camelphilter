		"@testing-library/svelte": "^5.3.1",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"jsdom": "^27.4.0",
		"lucide-svelte": "^0.562.0",
		"postcss": "^8.5.6",
		"prettier": "^3.7.4",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
